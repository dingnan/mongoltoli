// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model DictionaryEntry {
  id                    Int              @id @default(autoincrement())
  mongolian             String
  cyrillic              String
  english               String
  definition            String           // Definition
  spellout              String?          // Letter-by-letter pronunciation
  englishPronunciation  String?          // English pronunciation guide
  partOfSpeech          String?          // noun, verb, adjective, etc.
  root                  String?          // Word root/etymology
  synonym               String?          // Synonyms (comma-separated or JSON)
  antonym               String?          // Antonyms (comma-separated or JSON)
  lookAlikes            String?          // Similar looking words (comma-separated or JSON)
  examples              String?          // Usage examples
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  @@index([cyrillic])
  @@index([mongolian])
}